{% extends 'example/layout.html.twig' %}

{% block title %}Form{% endblock %}

{% block container %}
    <div class="container">

        <div class="page-header">
            <h1>Form</h1>
        </div>

        {{ form_start(form) }}
            {{ form_widget(form) }}
        {{ form_end(form) }}

        <hr/>

        <div class="page-header">
            <h2>Examples</h2>
        </div>

        <div class="bs-example" data-example-id="hoverable-table">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Date</th>
                </tr>
                </thead>
                <tbody>
                {% for example in examples %}
                    <tr>
                        <th scope="row">{{ example.id }}</th>
                        <td>{{ example.name }}</td>
                        <td>{{ example.since|date }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock container %}
